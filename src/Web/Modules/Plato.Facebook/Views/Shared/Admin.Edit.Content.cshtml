@model FacebookSettingsViewModel
@{
    var platoOpts = GetOptions<PlatoOptions>();
    var isDemo = platoOpts?.DemoMode ?? false;
}

<card>
    <card-title>
        <h6 class="card-title">@T["Facebook"]</h6>
    </card-title>
    <card-body>

        <div class="row">
            <div class="col">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="DefaultFrom">
                        <label asp-for="@Model.AppId">
                            <strong>@T["App ID"]</strong>
                            <span asp-validation-for="@Model.AppId" class="text-danger"></span>
                            <br />
                            <span class="text-muted">@T["Your facebook App ID."]</span>
                            <a href="https://developers.facebook.com/docs/apps/" target="_blank">@T["Get your App ID"]</a>
                        </label>
                        <input placeholder="@T["your facebook app id..."]" asp-for="@Model.AppId" class="form-control" autofocus />
                    </div>
                </fieldset>
                <fieldset>
                    <div class="form-group" asp-validation-class-for="DefaultFrom">
                        <label asp-for="@Model.AppSecret">
                            <strong>@T["App Secret"]</strong>
                            <span asp-validation-for="@Model.AppSecret" class="text-danger"></span>
                            <br />
                            <span class="text-muted">@T["Your facebook app secret."]</span>
                            <a href="https://developers.facebook.com/apps/">@T["Manage your Facebook apps"]</a>
                        </label>
                        <div class="search-input-group">
                            <input asp-for="AppSecret"
                                   type="text"
                                   class="form-control"
                                   autocomplete="off"
                                   data-provide="password"
                                   placeholder="@T["your facebook app secret..."]" />
                            <button type="button" class="btn btn-secondary" data-toggle="tooltip" title="@T["Toggle Visibility"]" role="button">
                                <i class="fal fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <div class="form-group row" asp-validation-class-for="CallbackPath">
                        <div class="col-lg">
                            <label asp-for="CallbackPath">
                                <strong>@T["Callback Path"]</strong>
                                <br />
                                <span class="text-muted">@T["The path within the application where the user-agent will be returned. The middleware will process this request when it arrives."]</span>
                                <span asp-validation-for="CallbackPath"></span>
                            </label>
                            <input asp-for="CallbackPath" class="form-control" placeholder="/signin-facebook" />
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>

    </card-body>
</card>

<card>
    <card-body>
        @if (isDemo)
        {
            <span class="d-inline-block disabled" data-toggle="tooltip" title="@T["This option is disabled within the demo"]">
                <a href="#" class="btn btn-primary disabled">
                    @T["Save"]
                </a>
            </span>
        }
        else
        {
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
        }
    </card-body>
</card>
