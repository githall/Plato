@model ForgotPasswordViewModel
@{
    AddTitleSegment(T["Forgot Password"]);
}

<div class="layout">
    <div class="layout-header">
        <div class="layout-header-content">
            <h4>@T["Forgot Password"]</h4>
            <span class="text-muted">@T["We'll send you a password reset link"]</span>
        </div>
    </div>
    <div class="layout-body">
        <div class="layout-content">
            <div class="row">
                <div class="col-md-6">
                    <form asp-controller="Account" asp-action="ForgotPassword" method="post" data-disable-submit="true">        
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label asp-for="UserIdentifier" class="col-form-label font-weight-bold">@T["Email or username"]</label>
                            <input asp-for="UserIdentifier" placeholder="@T["email@address.com"]" class="form-control" autofocus />
                        </div>
                        <div class="form-group">
                            <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@T["Submit"]</button>
                        </div>
                    </form>
                </div>
            </div> 
        </div>
    </div>
</div>