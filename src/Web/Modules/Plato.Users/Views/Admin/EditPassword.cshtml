@model EditPasswordViewModel
@{
    AddTitleSegment(T["Admin"]);
    AddTitleSegment(T["Users"]);
    AddTitleSegment(T["Edit Password"]);
    var platoOpts = GetOptions<PlatoOptions>();
    var isDemo = platoOpts?.DemoMode ?? false;
}


<form asp-action="EditPassword" method="post" enctype="multipart/form-data" data-disable-submit="true">
    <div class="layout">
        <div class="layout-header">
            <div class="layout-header-content">
                <h4>@T["Edit Password"]</h4>
                <span class="text-muted">@T["Reset an account password"]</span>
                <hr />
            </div>
        </div>
        <div class="layout-body">
            <div class="layout-content">
                <card>
                    <card-title>
                        <h6 class="card-title d-inline-block">@T["Edit Password"]</h6>
                    </card-title>
                    <card-body>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="col-form-label font-weight-bold">@T["New Password"]</label>
                            <i class="fal fa-info-circle" title="@T["Must contain at least 1 lower case character, 1 upper case character, 1 special character, 1 digit and be a minimum of 6 characters long."]" data-toggle="tooltip"></i>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <input asp-for="NewPassword" class="form-control" />
                            <div id="passwordStrength"></div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirmation" class="col-form-label font-weight-bold">@T["New Password Confirmation"]</label>
                            <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
                            <input asp-for="PasswordConfirmation" class="form-control" />
                        </div>
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="Email" type="hidden" />
                        <input asp-for="ResetToken" type="hidden" />
                        <div class="form-group">

                            @if (isDemo)
                            {
                                <span class="d-inline-block disabled" data-toggle="tooltip" title="@T["This option is disabled within the demo"]">
                                    <a href="#" class="btn btn-primary disabled">
                                        @T["Submit"]
                                    </a>
                                </span>
                            }
                            else
                            {

                                <button type="submit" role="button" class="btn btn-primary">@T["Submit"]</button>
                            }

                            </div>
                    </card-body>
                </card>
            </div>
        </div>
    </div>
</form>