@model SetUpViewModel
@{
    AddTitleSegment(T["Set Up - Company Name"]);
    Layout = "_GetStartedLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form asp-action="SetUp" method="post" enctype="multipart/form-data" data-disable-submit="true">
            <input type="hidden" asp-for="SessionId" />
            <div class="my-4">
                <span class="plato-brand align-middle mr-3"></span><h2 class="d-inline-block m-0 align-middle text-primary">Plato</h2>
            </div>
            <div class="mt-4 text-muted text-uppercase">
                @T["Step 3 of 4"]
            </div>
            <h1 class="display-4 text-primary font-weight-bold">
                @T["Your nearly there"]
            </h1>
            <h3 class="font-weight-light my-4">
                @T["We need your company name - this will be displayed within your support site and used within your URL; you can change this later"]
            </h3>
            <div class="mt-4">
                <div class="mt-2 w-100 max-w-500 d-inline-block">
                    <fieldset>
                        <div class="form-group text-left">
                            <input asp-for="CompanyName" class="form-control form-control-lg" placeholder="@T["company name"]" autofocus />
                        </div>
                    </fieldset>
                    <div class="text-left" asp-validation-summary="All"></div>
                    <div class="form-group">
                        <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@T["Confirm"]</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>