<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title asp-separator=" - ">Plato</title><environment names="Development">
    <link rel="stylesheet" href="/css/vendors/bootstrap.css" />
    <link rel="stylesheet" href="/css/vendors/font-awesome.css" />
    <link rel="stylesheet" href="/css/vendors/font-awesome.css" />
    <link rel="stylesheet" href="/css/app/plato.css" />
    <link rel="stylesheet" href="/plato.site/content/css/site.css" /></environment><environment names="Staging,Production">
    <link rel="stylesheet" href="/css/vendors/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/vendors/font-awesome.min.css" />
    <link rel="stylesheet" href="/css/app/plato.min.css" />
    <link rel="stylesheet" href="/plato.site/content/css/site.min.css" /></environment>
    <link rel="stylesheet" href="/sites/plato/themes/plato-site/theme.css" />
    <link rel="icon" href="/favicon.ico" />
    @await RenderSectionAsync("Header", required: false)
    <style>
        body, html {
            height: 100% !important;
        }
    </style>
</head>
<body class="bg-light">

    <div class="page-loader" data-provide="loader">
        <div class="plato-loader position-absolute-center">
            <div class="cube"></div>
            <div class="cube bg-primary"></div>
            <div class="cube bg-success"></div>
            <div class="cube bg-warning"></div>
            <div class="cube bg-danger"></div>
        </div>
    </div>

    <div class="d-flex h-100 flex-fill justify-content-center align-items-start">
        <div class="mx-auto max-w-900 text-center my-6">
            @RenderBody()
        </div>
    </div>

    <environment names="Development">
        <script src="~/js/vendors/jquery.js"></script>
        <script src="~/js/vendors/bootstrap.js"></script>
        <script src="~/js/app/plato.js" asp-append-version="true"></script>
        <script src="~/js/app/plato-ui.js" asp-append-version="true"></script>
        <script src="~/plato.site/content/js/site.js" asp-append-version="true"></script>
    </environment><environment names="Staging,Production">
        <script src="~/js/vendors/jquery.min.js"></script>
        <script src="~/js/vendors/bootstrap.min.js"></script>
        <script src="~/js/app/plato.min.js" asp-append-version="true"></script>
        <script src="~/js/app/plato-ui.min.js" asp-append-version="true"></script>
        <script src="~/plato.site/content/js/site.min.js" asp-append-version="true"></script>
    </environment>@RenderSection("Scripts", required: false)
    <script src="https://www.googletagmanager.com/gtag/js?id=UA-152865008-1"></script>
    <script>window.dataLayer = window.dataLayer || []; function gtag() { dataLayer.push(arguments); } gtag('js', new Date()); gtag('config', 'UA-152865008-1');</script>

</body>
</html>