@model SignUpConfirmationViewModel
@{
    AddTitleSegment(T["Sign Up Confirmation"]);
    Layout = "_GetStartedLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form asp-action="IndexConfirmation" method="post" enctype="multipart/form-data" data-disable-submit="true">
            <input type="hidden" asp-for="SessionId" />
            <div class="my-4">
                <span class="plato-brand align-middle mr-3"></span><h2 class="d-inline-block m-0 align-middle text-primary">Plato</h2>
            </div>
            <div class="mt-4 text-muted text-uppercase">
                @T["Step 2 of 4"]
            </div>
            <h1 class="display-4 text-primary font-weight-bold">
                @T["Check your email"]
            </h1>
            <h3 class="font-weight-light my-4">
                @T["We've sent a 6 digit confirmation code to"] <strong>@Model.Email</strong>.
                @T["Enter the code below. It will expire shortly so enter it soon."]
            </h3>
            <div class="mt-4">
                <div class="mt-2 w-100 max-w-500 d-inline-block">
                    <fieldset>
                        <div class="form-group text-left">
                            <input asp-for="SecurityToken" class="form-control form-control-lg text-center" placeholder="@T["enter your 6 digit confirmation code"]" autofocus />
                        </div>
                    </fieldset>
                    <div class="mt-2" asp-validation-summary="All"></div>
                    <div class="form-group">
                        <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@T["Confirm"]</button>
                    </div>
                    <div class="text-muted my-3">
                        @T["Keep this window open whilst waiting for your confirmation code. This may take a few minutes. Remember to check your SPAM folder."]
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>