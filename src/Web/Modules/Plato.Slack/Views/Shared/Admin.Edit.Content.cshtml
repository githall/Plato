@model SlackSettingsViewModel
@{
    var platoOpts = GetOptions<PlatoOptions>();
    var isDemo = platoOpts?.DemoMode ?? false;
}

<card>
    <card-title>
        <h6 class="card-title">@T["Webhook URL"]</h6>
    </card-title>
    <card-body>

        <div class="row">
            <div class="col">
                <fieldset>
                    <div class="form-group" asp-validation-class-for="DefaultFrom">
                        <label asp-for="WebHookUrl">
                            <strong>@T["Webhook URL"]</strong>
                            <span asp-validation-for="WebHookUrl" class="text-danger"></span>
                            <br />
                            <span class="text-muted">@T["Your Slack incoming web hook URL."]</span>
                            <a href="https://api.slack.com/apps/AMWA1G012/incoming-webhooks?success=1" target="_blank">@T["Get your Webhook URL"]</a>
                        </label>

                        <div class="search-input-group">
                            <input placeholder="@T["your Slack web hook url..."]"
                                   asp-for="WebHookUrl"
                                   data-provide="password"
                                   class="form-control" autofocus />
                            <button type="button" class="btn btn-secondary" data-toggle="tooltip" title="@T["Toggle Visibility"]" role="button">
                                <i class="fal fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </fieldset>

            </div>
        </div>

    </card-body>
</card>

<card>
    <card-body>
        @if (isDemo)
        {
            <span class="d-inline-block disabled" data-toggle="tooltip" title="@T["This option is disabled within the demo"]">
                <a href="#" class="btn btn-primary disabled">
                    @T["Save"]
                </a>
            </span>
        }
        else
        {
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
        }
    </card-body>
</card>
