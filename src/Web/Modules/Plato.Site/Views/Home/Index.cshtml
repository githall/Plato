@{
    AddTitleSegment(T["Better together"]);
    var platoSiteOptions = GetOptions<PlatoSiteOptions>();
}

<!-- Jumbotron -->
<section class="flex-column flex-lg-row no-gutters d-flex overflow-hidden">
    <div class="col-12 col-lg-6 align-self-start align-self-lg-center text-center">
        <div class="my-5 my-lg-0 mx-auto max-w-600">
            <canvas data-provide="logo" class="w-100"></canvas>
            <h1 class="text-primary font-weight-bold">
                All-in-one product support
            </h1>            
            <h3 class="font-weight-light mt-3">
                Articles, discussions, docs, files, ideas, issues, questions & more. Everything you need to help you evolve & support your products
            </h3>
            <div class="mt-4">
                <caching expires-after="@TimeSpan.FromMinutes(30)">
                    @await DisplayAsync(new View("SiteSignUpForm", new
                    {
                        sticky = false
                    }))
                </caching>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-12 overflow-hidden text-center text-lg-right align-self-start align-self-lg-center">
        <img alt="Plato Dashboard Screen Grab" src="/plato.site/content/images/dashboard.png" class="img-md-fluid mt-0 mt-lg-5 mx-md-auto w-md-90 d-inline-block" />
    </div>
</section>

<!-- Collaboration & support software -->
<section class="page bg-light">
    <div class="container text-center">
        <div class="row">
            <div class="col-12">
                <img src="~/plato.site/content/images/logo.png" alt="Plato Logo" title="Plato Logo" class="max-w-100 mb-4" />
                <h1 class="text-primary font-weight-bold">
                    All your support - in one place
                </h1>
                <hr class="divider my-4">
                <h3 class="font-weight-light">
                    Plato offers a fully integrated suite of tools to help you build & support amazing software
                </h3>
            </div>
        </div>
        <cacheing vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
            @await DisplayAsync(new View("SiteKeyFeatures", new
            {
                sticky = false
            }))
        </cacheing>
    </div>
</section>

<!-- Built With -->
<section class="page bg-purple">
    <div class="container">
        <div class="text-center">
            <h1 class="text-uppercase text-white font-weight-bold">
                Built With
            </h1>
            <hr class="divider border-light my-4" />
            <div class="row">
                <div class="col-lg-4 mt-4">
                    <img alt=".NET Core Logo" src="~/plato.site/content/images/netcore.png" class="img-fluid max-w-150" />
                </div>
                <div class="col-lg-4 mt-4">
                    <img alt="Visual Studio Logo" src="~/plato.site/content/images/vs.png" class="img-fluid max-w-150" />
                </div>
                <div class="col-lg-4 mt-4">
                    <img alt="Visual Studio Logo" src="~/plato.site/content/images/bootstrap.png" class="img-fluid max-w-150" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- For Open Source -->
<section class="page">
    <div class="container">
        <div class="py-5">
            <div class="row">
                <div class="col-12 text-center text-lg-left ">
                    <img alt="GitHub Octocat Logo" src="plato.site/content/images/octocat.png" class="img-md-fluid float-none float-lg-right mx-md-auto max-w-300 d-inline-block ml-lg-3 mb-4 mb-lg-0" />
                    <h1 class="text-uppercase text-primary font-weight-bold">
                        Open Source
                    </h1>
                    <hr class="divider divider-left primary my-4" />
                    <h3 class="font-weight-light">
                        We love open source and want to support those working on open source. If you have an open source project and would like to use Plato learn how to apply below.
                    </h3>
                    <a class="btn btn-primary btn-lg mt-4" asp-route-controller="OpenSource" asp-route-action="Index" data-provide="loader-spy">    
                        Learn More<i class="fal fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- For Business -->
<section class="page">
    <div class="container">
        <div class="py-5">
            <div class="row">
                <div class="col-12 text-center text-lg-left ">
                    <img alt="Plato Logo" src="plato.site/content/images/logo.png" class="img-md-fluid float-none float-lg-right mx-md-auto max-w-300 d-inline-block ml-lg-3 mb-4 mb-lg-0" />
                    <h1 class="text-uppercase text-primary font-weight-bold">
                        Live Demo
                    </h1>
                    <hr class="divider divider-left primary my-4" />
                    <h3 class="font-weight-light">
                        Our live demo provides access to an administrator account so you can fully explore Plato. Should you have questions whilst exploring <a asp-route-area="Plato.Site" asp-route-controller="Company" asp-route-action="Contact">we would love to help</a>
                    </h3>
                    <a class="btn btn-primary btn-lg mt-4" href="@platoSiteOptions.DemoUrl" target="_blank" data-provide="loader-spy">
                        Launch Demo<i class="fal fa-external-link ml-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

