<!--  Meet Plato -->
<section class="page bg-light">
    <div class="container text-center">

        <div class="row">
            <div class="col-12">
                <img src="~/plato.site/content/images/logo.png" alt="Plato Logo" title="Plato Logo" class="max-w-100 mb-4" />
                <h1 class="text-uppercase text-primary font-weight-bold">
                    Meet Plato
                </h1>
                <hr class="divider my-4">
                <h3 class="font-weight-light">
                    Plato offers a fully integrated suite of tools to help you build & support amazing software
                </h3>
            </div>
        </div>
        <cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
            @await DisplayAsync(new View("SiteKeyFeatures", new
            {
                sticky = false
            }))
        </cache>
    </div>
</section>


<!-- Built Upon -->
<section class="page bg-purple">
    <div class="container">
        <div class="text-center">
            <h1 class="text-uppercase text-white font-weight-bold">
                Built With
            </h1>
            <hr class="divider border-light my-4" />
            <div class="row">
                <div class="col-lg-4 mt-4">
                    <img alt=".NET Core Logo" src="~/plato.site/content/images/netcore.png" class="img-fluid max-w-150" />
                </div>
                <div class="col-lg-4 mt-4">
                    <img alt="Visual Studio Logo" src="~/plato.site/content/images/vs.png" class="img-fluid max-w-150" />
                </div>
                <div class="col-lg-4 mt-4">
                    <img alt="Visual Studio Logo" src="~/plato.site/content/images/bootstrap.png" class="img-fluid max-w-150" />
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Get the Code -->
<section class="page">
    <div class="container">
        <div class="py-5">
            <div class="row">
                <div class="col-12 text-center text-lg-left ">
                    <img alt="GitHub Octocat Logo" src="plato.site/content/images/octocat.png" class="img-md-fluid float-none float-lg-right mx-md-auto max-w-300 d-inline-block ml-lg-3 mb-4 mb-lg-0" />
                    <h1 class="text-uppercase text-primary font-weight-bold">
                        For Community
                    </h1>
                    <hr class="divider divider-left primary my-4" />
                    <h3 class="font-weight-light">
                        Our community edition of Plato is 100% free and open source. You can download the code or contribute to improve the project on GitHub.
                    </h3>
                    <a class="btn btn-primary btn-lg mt-4" target="_blank" href="https://github.com/InstantASP/plato" data-provide="loader-spy">
                        <i class="fab fa-github"></i>
                        Plato on GitHub
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Managed Hosting -->
<section class="page">
    <div class="container">
        <div class="py-5">
            <div class="row">
                <div class="col-12 text-center text-lg-left ">
                    <img alt="Plato Logo" src="plato.site/content/images/logo.png" class="img-md-fluid float-none float-lg-right mx-md-auto max-w-300 d-inline-block ml-lg-3 mb-4 mb-lg-0" />
                    <h1 class="text-uppercase text-primary font-weight-bold">
                        For Business
                    </h1>
                    <hr class="divider divider-left primary my-4" />
                    <h3 class="font-weight-light">
                        We offer self-hosted or fully managed paid versions of Plato ideal for businesses wo require guaranteed technical support.
                    </h3>

                    <a class="btn btn-primary btn-lg mt-4" asp-route-area="Plato.Site" asp-route-controller=Pricing asp-route-action="Index" data-provide="loader-spy">
                        <i class="fal fa-shopping-cart"></i>
                        See Pricing
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to action -->
<cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
    @await DisplayAsync(new View("SiteCallToAction", new
    {
        sticky = false
    }))
</cache>


@section Scripts {
    <script src="/plato.site/content/js/home/babylon403.min.js"></script>
    <script src="/plato.site/content/js/home/earcut211.min.js"></script>
    <script src="/plato.site/content/js/home/logo-canvas.min.js"></script>
}
