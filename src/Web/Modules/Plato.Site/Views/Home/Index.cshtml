@{
    AddTitleSegment(T["Free, Open Source User Community & Customer Support Software for ASP.NET Core"]);
    var platoSiteOptions = GetOptions<PlatoSiteOptions>();
}

<!-- Jumbotron -->
<section class="flex-column flex-lg-row no-gutters d-flex overflow-hidden">
    <div class="col-12 col-lg-6 align-self-start align-self-lg-center text-center">
        <div class="my-5 my-lg-0 mx-auto max-w-600">
            <canvas data-provide="logo" class="w-100"></canvas>

            <h1 class="display-4 text-primary text-uppercase font-weight-bold">
                Better together
            </h1>

            <hr class="divider border-primary my-4" />
            <h3 class="font-weight-light">
                Plato brings your teams & users together to evolve & support your software projects.
            </h3>
            <div class="mt-4">
                <a class="btn btn-primary btn-lg mr-2" asp-route-area="Plato.Site" asp-route-controller="Plato" asp-route-action="Index" data-provide="loader-spy">
                    Learn More
                </a>
                <div class="btn-group github-button" role="group" aria-label="GitHub button">
                    <a class="btn btn-secondary btn-lg" href="https://github.com/InstantASP/plato" target="_blank" title="Plato on GitHub" data-provide="loader-spy">
                        <i class="fab fa-github"></i> Star
                    </a>
                    <a class="btn btn-secondary btn-lg star-count" href="https://github.com/InstantASP/plato/stargazers" target="_blank" title="Stars" data-provide="loader-spy">
                        ---
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-12 overflow-hidden text-center text-lg-right align-self-start align-self-lg-center">
        <img alt="Plato Dashboard Screen Grab" src="/plato.site/content/images/dashboard.png" class="img-md-fluid mt-0 mt-lg-5 mx-md-auto w-md-90 d-inline-block" />
    </div>
</section>



