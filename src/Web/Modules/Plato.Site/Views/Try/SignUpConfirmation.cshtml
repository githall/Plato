@model SignUpConfirmationViewModel
@{
    AddTitleSegment(T["Sign Up Confirmation"]);
    Layout = "_GetStartedLayout.cshtml";
}

<form asp-action="SignUpConfirmation" method="post" enctype="multipart/form-data" data-disable-submit="true" role="form">
    <section class="flex-column flex-lg-row no-gutters d-flex">
        <div class="col-12 align-self-start align-self-lg-center text-center">
            <div class="my-6 mx-auto max-w-800">

                <input type="hidden" asp-for="SessionId"/>

                <div>
                    <span class="plato-brand align-middle mr-2"></span><h2 class="d-inline-block align-middle text-primary">Plato</h2>
                </div>

                <div class="my-4">

                    <h1 class="display-4 text-primary font-weight-bold">
                        @T["Check your email"]
                    </h1>

                    <h3 class="font-weight-light my-4">
                        @T["We've sent a 6 digit confirmation code to"] <strong>@Model.Email</strong>. 
                        @T["Enter the code below. It will expire shortly so enter it soon."]
                    </h3>
                    <div class="mt-4">

                        <div class="mt-2 w-100 max-w-500 d-inline-block">
                            <fieldset>
                                <div class="form-group text-left">
                                    <input asp-for="SecurityToken" class="form-control form-control-lg" placeholder="@T["enter your 6 digit confirmation code"]" autofocus />
                                </div>
                            </fieldset>
                            <div class="mt-2" asp-validation-summary="All"></div>
                            <div class="form-group">
                                <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@T["Confirm"]</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </section>
</form>