@model ContactFormViewModel
@{
    AddTitleSegment(T["Contact"]);
}

<!-- Jumbotron -->
<section class="flex-column d-flex text-center bg-light">
    <div class="row no-gutters">
        <div class="col-12">
            <div class="my-6 mx-auto">             
                <h1 class="text-uppercase display-4 text-primary font-weight-bold">
                    Contact Us
                </h1>
                <hr class="divider" />
                <h2 class="font-weight-light my-4 mx-auto w-70">
                    We would love to hear from you. Use the form below to get in touch.
                </h2>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form -->
<section class="page bg-light">
    <div class="container mt-0">
        <div class="row">
            <div class="col-12">
                <div class="p-5 bg-white">
                    <form asp-action="Contact" method="post" enctype="multipart/form-data" data-disable-submit="true" role="form">

                        <h3 class="font-weight-bold text-primary text-uppercase">Send us a message</h3>
                        <p>
                            To benefit everyone please consider posting your questions via <a asp-route-area="Plato.Core" asp-route-controller="Home" asp-action="Index" data-provide="loader-spy">our community site</a>.
                        </p>
                        <hr class="my-2" />

                        <div class="form-group mt-4">
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <input asp-for="Name" placeholder="@T["your name"]" class="form-control" autofocus />
                        </div>

                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="Email" placeholder="@T["your email"]" class="form-control" />
                        </div>

                        <div class="form-group">
                            <span asp-validation-for="Message" class="text-danger"></span>
                            <textarea asp-for="Message" rows="9" placeholder="@T["your message"]" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <button type="submit" role="button" class="btn btn-primary btn-block btn-lg py-3">@T["Send Message"]</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Address -->
<section class="page bg-primary-25">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="p-5 bg-white">

                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <h3 class="font-weight-bold text-primary text-uppercase">Postal Address</h3>
                            <hr class="my-4" />
                            <address>
                                <strong>InstantASP Ltd</strong><br />
                                11 The Crescent<br />
                                Bucklow Hill<br />
                                Knutsford<br />
                                Cheshire<br />
                                WA16 6RQ<br />
                                United Kingdom
                            </address>
                            <p>
                                InstantASP Ltd is a UK limited company.
                            </p>
                        </div>

                        <div class="col-12 col-lg-6">
                            <h3 class="font-weight-bold text-primary text-uppercase">Email & Phone</h3>
                            <hr class="my-4" />

                            <p>
                           
                                <strong>Email</strong>
                                <h3 class="font-weight-light">
                                    <a href="mailto:sales@instantasp.co.uk">
                                        sales@instantasp.co.uk
                                    </a>
                                </h3>
                            </p>

                            <p>
                                <strong>Phone</strong>
                                <h3 class="font-weight-light">
                                    <a href="tel:441565832827">+44 (0) 1565 832 827</a>
                                </h3>
                            </p>
                            <p>
                                We are available Mon-Fri 9am-6pm BST - Sales Only
                            </p>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to action -->
<cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
    @await DisplayAsync(new View("SiteCallToAction", new
    {
        sticky = false
    }))
</cache>
