@{
    AddTitleSegment(T["About Plato"]);
    var platoSiteOptions = GetOptions<PlatoSiteOptions>();
}

<!-- Jumbotron -->
<section class="page bg-ligt" style="background: url(/plato.site/content/images/bg17.png) bottom center repeat-x;">
    <div class="container mb-0">
        <div class="row text-center">
            <div class="col-12">
                <img src="~/plato.site/content/images/logo.png" alt="Plato Logo" title="Plato Logo" class="max-w-100 mb-4" />
                <h1 class=" display-4 text-primary text-uppercase font-weight-bold">
                    Help Users Help Themselves
                </h1>
                <h2 class="font-weight-light  my-4">
                    A public or private knowledgebase for everything important to what you do
                </h2>
            </div>
            <div class="col-12">
                <img alt="Plato Articles Screen Grab" src="~/plato.site/content/images/articles.png" class="img-fluid  d-inline-block mt-4" />
            </div>
        </div>
    </div>
</section>

<!-- Live Demo -->
<section class="py-4 border-top border-bottom border-light">
    <div class="container text-center">
        Try a live demo of our knowledgebase software
        <a href="@platoSiteOptions.DemoUrl" target="_blank" data-provide="loader-spy" class="btn btn-outline-primary">
            Live Demo
        </a>
    </div>
</section>

<!-- Always on self-service support -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center text-lg-left">
                <h5 class="text-muted text-uppercase">Come together</h5>
                <h1 class="display-5 text-primary font-weight-bold">
                    Always on self-service support
                </h1>
                <hr class="divider divider-left my-4" />
                <h4 class="font-weight-light">
                    Provide a central, searchable self-service knowledgebase to address common questions, provide solutions or share helpful articles to better support your users. Help users or your team find answers immediately around the clock helping reduce overall inbound support inquires.
                </h4>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="product-image mx-auto mx-lg-0 mt-4 mt-lg-0">
                    <div class="img-star-warning img-corner-top-right img-48"></div>
                    <img alt="Plato - Ranked Search" src="/plato.site/content/images/articles1.png" class="img-md-fluid float-none float-lg-right mx-md-auto d-inline-block max-w-600 ml-lg-3 mb-4 mb-lg-0" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Unleash all your knowledge -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center text-lg-left order-lg-2">
                <h5 class="text-muted text-uppercase">Peer to peer</h5>
                <h1 class="display-5 text-primary font-weight-bold">
                    Unleash all your knowledge
                </h1>
                <hr class="divider divider-left my-4" />
                <h4 class="font-weight-light">
                    It's often helpful to share existing files that will help your users or team. Articles within Plato make it super easy to attach files to your articles. Attached files will appear below articles and as a bonus are also indexed and included within Plato search results making all your files searchable.
                </h4>
            </div>
            <div class="col-lg-6 order-lg-1 text-center text-lg-left">
                <div class="product-image mx-auto mx-lg-0 mt-4 mt-lg-0">
                    <div class="img-star-primary img-corner-top-left img-48"></div>
                    <img alt="Plato Articles - Share & Search Files" src="/plato.site/content/images/articles2.png" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Capture everything -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center text-lg-left ">
                <h5 class="text-muted text-uppercase">Build Trust</h5>
                <h1 class="display-5 text-primary font-weight-bold">
                    Capture everything
                </h1>
                <hr class="divider divider-left my-4" />
                <h4 class="font-weight-light">
                    Plato offers a simple yet powerful markdown editor for composing articles. This ensures authors don’t need to worry about HTML whilst developing content but more importantly ensures all your articles have a simple structure and consistent look & feel.
                </h4>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="product-image mx-auto mx-lg-0 mt-4 mt-lg-0">
                    <div class="img-star-success img-corner-top-right img-48"></div>
                    <img alt="Plato Articles - Capture Everything" src="/plato.site/content/images/articles3.png" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Self Service Features -->
<section class="page bg-primary-25">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-uppercase text-white font-weight-bold mt-4">
                    Self Service Features
                </h1>
                <hr class="divider border-white my-4" />
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <div class="row">
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Markdown
                            </strong>
                            <span class="d-block mb-0">
                                Focus on your content and not the HTML for your articles.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Drafts
                            </strong>
                            <span class="d-block mb-0">
                                Work on articles privately until they are ready for your users.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                #references
                            </strong>
                            <span class="d-block mb-0">
                                Provide rich linking to other articles via hash references.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Auto Save
                            </strong>
                            <span class="d-block mb-0">
                                Never lose work with automatic save & restore.
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Categories
                            </strong>
                            <span class="d-block mb-0">
                                Group articles by product or project.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Tags & Labels
                            </strong>
                            <span class="d-block mb-0">
                                Discover & follow articles by tag or label.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Follows
                            </strong>
                            <span class="d-block mb-0">
                                Follow articles & get notified when articles are updated.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Versioning
                            </strong>
                            <span class="d-block mb-0">
                                A history of all edits made to articles with roll back support.
                            </span>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</section>

<!-- Shared Features -->
<cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
    @await DisplayAsync(new View("SiteSharedFeatures", new
    {
        sticky = false
    }))
</cache>

<!-- Call to action -->
<cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
    @await DisplayAsync(new View("SiteCallToAction", new
    {
        sticky = false
    }))
</cache>
