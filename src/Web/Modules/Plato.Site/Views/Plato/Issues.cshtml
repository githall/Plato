@{
    AddTitleSegment(T["About Plato"]);
    var platoSiteOptions = GetOptions<PlatoSiteOptions>();
}

<!-- Jumbotron -->
<section class="page bg-ligt" style="background: url(/plato.site/content/images/bg28.png) bottom center repeat-x;">
    <div class="container mb-0">
        <div class="row text-center">
            <div class="col-12">
                <img src="~/plato.site/content/images/logo.png" alt="Plato Logo" title="Plato Logo" class="max-w-100 mb-4" />
                <h1 class=" display-4 text-primary text-uppercase font-weight-bold">
                    Know what's important
                </h1>
                <h2 class="font-weight-light  my-4">
                    Capture & prioritize issues from your users to help deliver great software
                </h2>
            </div>
            <div class="col-12">
                <img alt="Plato Questions Screen Grab" src="~/plato.site/content/images/issues.png" class="img-fluid  d-inline-block mt-4" />
            </div>
        </div>
    </div>
</section>

<!-- Live Demo -->
<section class="py-4 border-top border-bottom border-light">
    <div class="container text-center">
        Try a live demo of our issue tracking software
        <a href="@platoSiteOptions.DemoUrl" target="_blank" data-provide="loader-spy" class="btn btn-outline-primary">
            Live Demo
        </a>
    </div>
</section>

<!-- User driven issues -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center text-lg-left">
                <h5 class="text-muted text-uppercase">Come together</h5>
                <h1 class="display-5 text-primary font-weight-bold">
                    User driven issues
                </h1>
                <hr class="divider divider-left my-4" />
                <h4 class="font-weight-light">
                    Issues offers a central space to work with your users to capture & manage errors or bugs within your software. With issues users can report new issues directly to your team or vote on existing issues affecting them the most. You can openly collaborate with users until issues are resolved.
                </h4>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="product-image mx-auto mx-lg-0 mt-4 mt-lg-0">
                    <div class="img-star-primary img-corner-top-right img-48"></div>
                    <img alt="Plato Issues - User driven issues" src="/plato.site/content/images/issues1.png" class="img-md-fluid float-none float-lg-right mx-md-auto d-inline-block max-w-600 ml-lg-3 mb-4 mb-lg-0" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Improve team efficiency -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center text-lg-left order-lg-2">
                <h5 class="text-muted text-uppercase">Peer to peer</h5>
                <h1 class="display-5 text-primary font-weight-bold">
                    Improve team efficiency
                </h1>
                <hr class="divider divider-left my-4" />
                <h4 class="font-weight-light">
                    Our collaborative issue tracking ensures your team is focused on the high priority issues voted for by your users rather than spending time on smaller issues. Enhance transparency by ensuring every member of your team knows the issues affecting your users and what issues need attention.
                </h4>
            </div>
            <div class="col-lg-6 order-lg-1 text-center text-lg-left">
                <div class="product-image mx-auto mx-lg-0 mt-4 mt-lg-0">
                    <div class="img-star-warning img-corner-top-left img-48"></div>
                    <img alt="Plato Discuss - User Reputation" src="/plato.site/content/images/badges.png" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Move work forward -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center text-lg-left ">
                <h5 class="text-muted text-uppercase">Build Trust</h5>
                <h1 class="display-5 text-primary font-weight-bold">
                    Private issues
                </h1>
                <hr class="divider divider-left my-4" />
                <h4 class="font-weight-light">
                    If our public, transparent approach to issue tracking is not for you, you can also configure issues to be completely private and only accessible to your team or a sub-set of your users. You have complete control over who can view any content within Plato via permissions & roles.
                </h4>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="product-image mx-auto mx-lg-0 mt-4 mt-lg-0">
                    <div class="img-star-success img-corner-top-right img-48"></div>
                    <img alt="Plato Discuss - User Reputation" src="/plato.site/content/images/connectcommunity.png" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Shared Features -->
<cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
    @await DisplayAsync(new View("SiteSharedFeatures", new
    {
        sticky = false
    }))
</cache>

<!-- Call to action -->
<cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
    @await DisplayAsync(new View("SiteCallToAction", new
    {
        sticky = false
    }))
</cache>
