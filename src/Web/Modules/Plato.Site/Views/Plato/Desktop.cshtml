@{
    AddTitleSegment(T["Desktop"]);
}
@{
    var platoSiteOptions = GetOptions<PlatoSiteOptions>();
}

<section class="page">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="d-inline-block max-w-700">
                    <img src="~/plato.site/content/images/download.png" class="img-fluid mb-4" />
                    <div class="mt-4">
                        <h1 class="display-4 text-primary">
                            Plato Desktop
                        </h1>
                        <hr class="divider border-primary">
                        <h2 class="font-weight-light">
                            Your content, in a beautiful new light
                        </h2>
                        <p class="mt-4">
                            Offer a simple native experience to ease accessing your Plato site. Great for those authoring Plato content. Plato Desktop requires Windows 10 and an active internet connection.
                        </p>
                        <p class="download-content">
                            <a class="download-badge windows" href="@platoSiteOptions.PlatoDesktopUrl" target="_blank">
                                <img src="~/plato.site/content/images/download/windowsstore_badge_en.svg" />
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Get the Code -->
<section class="page">
    <div class="container">
        <div class="py-5">
            <div class="row">
                <div class="col-12 text-center text-lg-left ">
                    <img alt="GitHub Octocat Logo" src="plato.site/content/images/octocat.png" class="img-md-fluid float-none float-lg-right mx-md-auto max-w-300 d-inline-block ml-lg-3 mb-4 mb-lg-0" />
                    <h1 class="text-uppercase text-primary font-weight-bold">
                        Get The Code
                    </h1>
                    <hr class="divider divider-left primary my-4" />
                    <h3 class="font-weight-light">
                        Plato Desktop is free and open source. You can customtize the code or contribute to improve the project on GitHub.
                    </h3>
                    <a class="btn btn-primary btn-lg mt-4" target="_blank" href="https://github.com/InstantASP/plato.UWP" data-provide="loader-spy">
                        <i class="fab fa-github"></i>
                        Plato Desktop on GitHub
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to action -->
<section class="page bg-primary-people">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h4 class="font-weight-bold text-white">
                    Plato can help you help your users & reduce inbound support
                </h4>
                <a class="btn btn-light text-primary btn-lg mt-4" asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Pricing" data-provide="loader-spy">
                    Get Started For Free
                </a>
            </div>
        </div>
    </div>
</section>