@{
    AddTitleSegment(T["About Plato"]);
    var platoSiteOptions = GetOptions<PlatoSiteOptions>();
}

<!-- Jumbotron -->
<section class="page bg-ligt" style="background: url(/plato.site/content/images/bg13.png) bottom center repeat-x;">
    <div class="container mb-0">
        <div class="row text-center">
            <div class="col-12">
                <img src="~/plato.site/content/images/logo.png" alt="Plato Logo" title="Plato Logo" class="max-w-100 mb-4" />
                <h1 class=" display-4 text-primary text-uppercase font-weight-bold">
                    Ask questions, get answers
                </h1>
                <h2 class="font-weight-light  my-4">
                    Community driven Q&A software to highlight your best answers
                </h2>
            </div>
            <div class="col-12">
                <img alt="Plato Questions Screen Grab" src="~/plato.site/content/images/questions.png" class="img-fluid  d-inline-block mt-4" />
            </div>
        </div>
    </div>
</section>

<!-- Live Demo -->
<section class="py-4 border-top border-bottom border-light">
    <div class="container text-center">
        Explore a live demo of our Q&A software
        <div class="d-block d-lg-inline-block mt-4 mt-lg-0 ml-lg-4">
            <a href="@platoSiteOptions.DemoUrl" target="_blank" data-provide="loader-spy" class="btn btn-outline-primary">
                Live Demo
            </a>
        </div>
    </div>
</section>

<!-- Q&A for users & teams -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center text-lg-left">
                <h5 class="text-muted text-uppercase">Public or Private</h5>
                <h1 class="display-5 text-primary font-weight-bold">
                    Q&A for users & teams
                </h1>
                <hr class="divider divider-left my-4" />
                <h4 class="font-weight-light">
                    Keep all your answers in a central, up-to-date place allowing your team & users to find the answers they need at the speed of type. Stop digging through emails and leverage community voting & reactions to ensure the best answers bubble to the top.
                </h4>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="product-image mx-auto mx-lg-0 mt-4 mt-lg-0">
                    <div class="img-star-primary img-corner-top-right img-48"></div>
                    <img alt="Plato Questions - Highlighted Answers" src="/plato.site/content/images/questions1.png" class="img-md-fluid float-none float-lg-right mx-md-auto d-inline-block max-w-600 ml-lg-3 mb-4 mb-lg-0" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Engage your experts -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center text-lg-left order-lg-2">
                <h5 class="text-muted text-uppercase">Inspire conversation</h5>
                <h1 class="display-5 text-primary font-weight-bold">
                    Engage your experts
                </h1>
                <hr class="divider divider-left my-4" />
                <h4 class="font-weight-light">
                    Use tags or labels to follow areas you’re interested in and get notified when new questions around your expertise are posted. @@mention others into the conversation to get their input & organically grow your knowledge.
                </h4>
            </div>
            <div class="col-lg-6 order-lg-1 text-center text-lg-left">
                <div class="product-image mx-auto mx-lg-0 mt-4 mt-lg-0">
                    <div class="img-star-warning img-corner-top-left img-48"></div>
                    <img alt="Plato Questions - User Reputation" src="/plato.site/content/images/questions3.png" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Reduce Inbound -->
<section class="page bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center text-lg-left ">
                <h5 class="text-muted text-uppercase">Share Knowledge</h5>
                <h1 class="display-5 text-primary font-weight-bold">
                    Reduce Inbound
                </h1>
                <hr class="divider divider-left my-4" />
                <h4 class="font-weight-light">
                    Focus on building great products and not answering the same questions day in day out. Naturally grow your content whilst helping each other and overtime reducing inbound support. Halt the flood of emails and share your answers once with everyone.
                </h4>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="product-image mx-auto mx-lg-0 mt-4 mt-lg-0">
                    <div class="img-star-success img-corner-top-right img-48"></div>
                    <img alt="Plato Questions - Reduce Inbound" src="/plato.site/content/images/questions2.png" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Q&A Features -->
<section class="page bg-primary-25">
    <div class="container">

        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-uppercase text-white font-weight-bold mt-4">
                    Q&A Features
                </h1>
                <hr class="divider border-white my-4" />
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <div class="row">
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Notifications
                            </strong>
                            <span class="d-block mb-0">
                                Get notified via web or email when new answers are posted.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                User Voting
                            </strong>
                            <span class="d-block mb-0">
                                Users can vote up (or down) both questions & answers.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Accepted Answers
                            </strong>
                            <span class="d-block mb-0">
                                Stop digging, accepted answers are shwon at the top.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                @@mentions
                            </strong>
                            <span class="d-block mb-0">
                                @@mention team members or other knowledge experts.
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Categories
                            </strong>
                            <span class="d-block mb-0">
                                Group questions by product or project or anyway you wish
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Tags & Labels
                            </strong>
                            <span class="d-block mb-0">
                                Discover new questions by following tags or labels.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Private Questions
                            </strong>
                            <span class="d-block mb-0">
                                Help users publicly or privately via private questions.
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 mb-4">
                        <div class="d-block p-5 text-center bg-white border">
                            <strong class="d-block h4 mb-2">
                                Complete History
                            </strong>
                            <span class="d-block mb-0">
                                A history of every change to both questions & answers.
                            </span>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</section>

<!-- Shared Features -->
<cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
    @await DisplayAsync(new View("SiteSharedFeatures", new
    {
        sticky = false
    }))
</cache>

<!-- Call to action -->
<cache vary-by-user="true" expires-after="@TimeSpan.FromMinutes(30)">
    @await DisplayAsync(new View("SiteCallToAction", new
    {
        sticky = false
    }))
</cache>
