@using PlatoCore.Abstractions.Settings
@{
    var platoOpts = GetOptions<PlatoOptions>();
}

<div class="slide-out slide-out-bottom-right" data-provide="slide-spy">
    <a href="#top" data-provide="scroll" class="btn btn-primary" data-toggle="tooltip" title="Back to Top">
        <i class="fal fa-chevron-up  d-inline-block"></i>
    </a>
</div>

<div class="row no-gutters text-muted text-center text-lg-left">
    <div class="container">
        <div class="my-4">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <a asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Index" class="plato-brand mr-3" data-toggle="tooltip" title="Powered by Plato @platoOpts.Version @platoOpts.ReleaseType" data-provide="loader-spy"></a>
                    <ul class="list-inline d-inline-block">
                        <li class="list-inline-item">
                            Copyright &copy; @DateTime.Now.Year All Rights Reserved. <a href="https://www.instantasp.co.uk/" class="text-muted">InstantASP Ltd</a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-lg-6  mt-2 mt-lg-0">
                    <ul class="list-inline float-lg-right">
                        <li class="list-inline-item">
                            <a asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Index" class="text-muted" data-provide="loader-spy">
                                Home
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a asp-route-area="Plato.Core" asp-route-controller="Home" asp-route-action="Index" class="text-muted" data-provide="loader-spy">
                                Support
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a asp-route-area="Plato.Site" asp-route-controller="Company" asp-route-action="Contact" class="text-muted" data-provide="loader-spy">
                                Contact Us
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a asp-route-area="Plato.Site" asp-route-controller="Legal" asp-route-action="Terms" class="text-muted" data-provide="loader-spy">
                                Terms of Use
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a asp-route-area="Plato.Site" asp-route-controller="Legal" asp-route-action="Privacy" class="text-muted" data-provide="loader-spy">
                                Privacy Policy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
