@{ 
    var platoSiteOptions = GetOptions<PlatoSiteOptions>();
}

<div class="row no-gutters bg-black">
    <div class="container">
        <div class="pt-4 my-md-5 pt-md-5">
            <div class="row">
                <div class="col-12 col-md">
                    <h4 class="font-weight-light">
                        <a class="text-white" asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="Index" data-provide="loader-spy">
                            <img src="/plato.site/content/images/instantasp-logo.png" class="img-32" alt="InstantASP" title="InstantASP" />
                        </a>
                    </h4>
                    <p class="d-block my-4 text-muted">

                        We craft beautiful software to help businesses help & engage users
                    </p>
                    <p>
                        <div class="btn-group github-button" role="group" aria-label="GitHub button">
                            <a class="btn btn-dark btn-lg" href="https://github.com/InstantASP/plato" target="_blank" title="Plato on GitHub" data-provide="loader-spy">
                                <i class="fab fa-github"></i> Star
                            </a>
                            <a class="btn btn-dark btn-lg star-count" href="https://github.com/InstantASP/plato/stargazers" target="_blank" title="Stars" data-provide="loader-spy">
                                ---
                            </a>
                        </div>
                    </p>
                </div>
                <div class="col-6 col-md">
                    <h5>Plato</h5>
                    <ul class="list-inline">
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Site" asp-route-controller="Plato" asp-route-action="About" class="text-white" data-provide="loader-spy">
                                About Plato
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Site" asp-route-controller="Plato" asp-route-action="Features" class="text-white" data-provide="loader-spy">
                                Key Features
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Site" asp-route-controller="Plato" asp-route-action="Modules" class="text-white" data-provide="loader-spy">
                                All Modules
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a href="@platoSiteOptions.DemoUrl" target="_blank" class="text-white" data-provide="loader-spy">
                                Live Demo
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Site" asp-route-controller="Pricing" asp-route-action="Pricing" class="text-white" data-provide="loader-spy">
                                Pricing
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Site" asp-route-controller="Plato" asp-route-action="Desktop" class="text-white" data-provide="loader-spy">
                                Plato Desktop
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5>Support</h5>
                    <ul class="list-inline">
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Discuss" asp-route-controller="Home" asp-route-action="Index" class="text-white" data-provide="loader-spy">
                                Community
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Docs" asp-route-controller="Home" asp-route-action="Index" class="text-white" data-provide="loader-spy">
                                Documentation
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Articles" asp-route-controller="Home" asp-route-action="Index" class="text-white" data-provide="loader-spy">
                                Knowledge Base
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Questions" asp-route-controller="Home" asp-route-action="Index" class="text-white" data-provide="loader-spy">
                                Ask a Question
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Ideas" asp-route-controller="Home" asp-route-action="Index" class="text-white" data-provide="loader-spy">
                                Suggest an Idea
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Issues" asp-route-controller="Home" asp-route-action="Index" class="text-white" data-provide="loader-spy">
                                Report an Issue
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5>More</h5>
                    <ul class="list-inline">
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Docs.Categories" asp-route-controller="Home" asp-route-action="Index" asp-route-opts.categoryId="3" asp-route-opts.alias="whats-new" class="text-white" data-provide="loader-spy">
                                What's New
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Discuss.Categories" asp-route-controller="Home" asp-route-action="Index" asp-route-opts.categoryId="1" asp-route-opts.alias="announcements" class="text-white" data-provide="loader-spy">
                                Announcements
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Site" asp-route-controller="Home" asp-route-action="SupportOptions" class="text-white" data-provide="loader-spy">
                                Support Options
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a href="https://github.com/InstantASP/plato" target="_blank" class="text-white" data-provide="loader-spy">
                                Plato on GitHub
                            </a>
                        </li>
                        <li class="d-block mb-2">
                            <a asp-route-area="Plato.Site" asp-route-controller="Company" asp-route-action="Contact" class="text-white" data-provide="loader-spy">
                                Contact Us
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-12 col-lg-6">
                    <p class="d-block text-muted">
                        Created with <span title="love" data-toggle="tooltip">❤️</span> <span title="coffee" data-toggle="tooltip">☕</span> <span title="pizza" data-toggle="tooltip">🍕</span> <a class="text-muted" href="https://www.instantasp.co.uk/" data-provide="loader-spy">InstantASP</a> &copy; @DateTime.Now.Year
                    </p>
                </div>
                <div class="col-12 col-lg-6">
                    <ul class="list-inline float-lg-right">
                        <li class="list-inline-item">
                            <a asp-route-area="Plato.Site" asp-route-controller="Legal" asp-route-action="Terms" class="text-muted" data-provide="loader-spy">
                                Terms of Use
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a asp-route-area="Plato.Site" asp-route-controller="Legal" asp-route-action="Privacy" class="text-muted" data-provide="loader-spy">
                                Privacy Policy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
